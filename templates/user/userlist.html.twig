{% extends 'base.html.twig' %}
{% block title %}Quiz site{% endblock %}
{% block body %}
    <blockquote class="blockquote text-center">
        <h1>User list</h1>
    </blockquote>
    <table id="articles" class="table table-striped">
        <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Username
            </th>
            <th>
                Email
            </th>
            <th>
                isActive
            </th>
            <th>
                Show results
            </th>
        </tr>
        </thead>
        <tbody>
        {% for u in users %}
            <tr>
                <td>
                    {{ u.id }}
                </td>
                <td>
                    {{ u.username }}
                </td>
                <td>
                    {{ u.email }}
                </td>
                <td>
                    {% if u.isActive == 1 %}
                        <div class="form-check">
                            <input id = "{{ u.id }}" class="form-check-input" type="checkbox" value="" checked="">
                        </div>
                    {% else %}
                        <div class="form-check">
                            <input id = "{{ u.id }}" class="form-check-input" type="checkbox" value="" unchecked="">
                        </div>
                    {% endif %}
                </td>
                <td>
                    <a class="btn btn-primary btn-lg mx-2 my-2" href="{{ path('admin_user_results', {user: u.id}) }}" role="button">Show results</a>
                </td>
            </tr>
        {% endfor %}

        </tbody>
    </table>

{% endblock %}

{% block javascripts %}
    <script src='{{ asset('js/userlist.js ') }}'></script>
{% endblock %}